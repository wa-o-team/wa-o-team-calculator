/**bill button**/
.total-wrapper{
  width: 96%;
  margin: 0 auto;
  border-bottom: 1px solid rgb(235, 213, 213);
}
.bills-details-view{
  width: 90%;
  margin-top: 20rpx;
}
.bills-details-view .total{
  font-size: 38rpx;
  width: 95%;
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding-bottom: 20rpx;
}
.bills-details-view .total text{
  display: block;
}
.detail{
  width: 90%;
  margin: 10rpx auto;
}
.detail .detail-item{
  margin-top:5rpx; 
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  background-color: rgb(253, 248, 248);
}
.add-count-btn,.income-btn,.expend-btn{
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  box-shadow: 0 0 2px #aaa inset;
  background-color: rgb(235, 213, 213);
  color: #fff;
}
.add-count-btn{
  font-weight: 600;
  font-size: 70rpx;
  position:fixed;
  right: 20rpx;
  top: 20rpx;
}
.income-btn{
  font-size: 30rpx;
  position: fixed;
  right: 20rpx;
  top: 140rpx;
}
.expend-btn{
  font-size: 30rpx;
  position: fixed;
  right: 20rpx;
  top: 250rpx;
}
.income-view,.expend-view{
  display: flex;
  position: fixed;
  width: 85%;
  background-color: rgba(255, 255, 255, 0.9);
}
.income-view{
  top: 140rpx;
  right: 105rpx;
  background-color: rgba(255, 255, 255, 0.85);
}
.expend-view{
  top:250rpx;
  right: 105rpx;
  background-color: rgba(255, 255, 255, 0.85);
}
.income-view text,.expend-view text{
  display: block;
  font-size: 22rpx;
}
.bill-icon-view{
  padding: 10rpx;
  text-align: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0 0 2px #aaa inset;
  margin: 0 5rpx;
}
.bill-icon{
  width: 40rpx;
  height: 40rpx;
}
/**input view**/
.bill-input-view{
  position: fixed;
  padding: 20rpx 0;
  bottom: 0;
  width: 100%;
  margin: 0 auto;
  box-shadow: 0 0 2px #aaa inset;
  border-radius: 5px;
  background-color: rgba(255, 255, 255, 0.85)
}
.input-view{
  width: 90%;
  display: flex;
  justify-content: space-around;
  margin-left: auto;
  margin-right: auto;
  padding-bottom: 10rpx;
  border-bottom: 2px solid #aaa;
}
.input-view .event-input{
  width: 400rpx;
  margin-left: 20rpx;
}
.input-view .money-input{
  width: 200rpx;
}
.date-picker-view{
  width: 100%;
  height: 200px;
  text-align: center;
}